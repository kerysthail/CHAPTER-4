#include<stdio.h>
#include<string.h>
int main(void)
{
	char name[40];
	int wildth;

	wildth = strlen(name) + 3;
	printf("Please enter your name:");
	scanf_s("%s", name,40);
	printf("Your name is \"%s\".", name);
	printf("Your name is \"%20s\".", name);
	printf("Your name is \"%-20s\".", name);
	printf("%*s", wildth, name);

	return 0;
}
